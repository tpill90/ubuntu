// cSpell Settings
{
    "version": "0.2",
    "language": "en-GB",
    "dictionaries": [
        // Makes cSpell only use the British spelling of words
        "!en_US"
    ],
    "languageSettings": [
        {
            "languageId": "markdown",
            // Allows us to make sure abbreviates like IP are always capitalized
            "caseSensitive": true
        }
    ],
    // "suggestWords": [
    // {
    // }
    // ],
    // List of words to be always considered correct
    "words": [
        "IP",
        "supervisord",
        "timezone"
    ],
    // List of words to be always considered incorrect
    // This is useful for offensive words and common spelling errors.
    // For example "hte" should be "the"
    "flagWords": [
        "hte",
        "ip->IP",
        "dns->DNS",
        "lancache->Lancache"
    ]
}
